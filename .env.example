# Database
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/inventario_db?schema=public"

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=inventario-api
JWT_AUDIENCE=inventario-app

# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

